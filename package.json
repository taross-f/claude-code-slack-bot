{
  "name": "claude-code-slack-bot",
  "version": "2.0.0",
  "description": "Claude Code Slack Bot - AI coding assistant for Slack",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:e2e": "bun test tests/e2e",
    "lint": "bunx biome check --write src/ tests/",
    "lint:ci": "bunx biome ci src/ tests/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.35",
    "@slack/bolt": "^4.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "latest",
    "typescript": "^5.8.0"
  }
}
